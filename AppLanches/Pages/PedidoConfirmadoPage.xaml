<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="AppLanches.Pages.PedidoConfirmadoPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Confirmed Order">

	<VerticalStackLayout
		Padding="20"
		HorizontalOptions="CenterAndExpand"
		VerticalOptions="CenterAndExpand">
		<Image
			Aspect="AspectFill"
			HeightRequest="300"
			IsAnimationPlaying="True"
			Source="order_confirmed.gif"
			WidthRequest="300" />

		<Label
			Margin="0,20,0,0"
			FontSize="24"
			HorizontalOptions="Center"
			Text="Your order was confirmed"
			TextColor="DarkBlue"
			VerticalOptions="CenterAndExpand" />

		<Button
			x:Name="BtnRetornar"
			Clicked="BtnRetornar_Clicked"
			HorizontalOptions="Center"
			Text="Return"
			VerticalOptions="CenterAndExpand" />
	</VerticalStackLayout>
</ContentPage>